{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "noEmit": true
    },
    "include": [
        "src/*.ts",
        "tests/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}
